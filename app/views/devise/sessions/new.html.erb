<div id='sessions-new'>

<h2>Please sign in</h2>

<div id='sessions-new-content'>
	<div id='sessions-new-oauth'>
		<%- if devise_mapping.omniauthable? %>
		  <%- resource_class.omniauth_providers.each do |provider| %>

			<div>
			  <!-- Show special button for provider -->
			  <%- if provider.to_s.titleize == "Facebook" -%>
			  <%= link_to image_tag('http://choose_it_public.s3.amazonaws.com/assets/fb_button.png'), omniauth_authorize_path(resource_name, provider) %>
			  <%- elsif provider.to_s.titleize == "Twitter"-%>
			  <%= link_to image_tag('http://s3.amazonaws.com/choose_it_public/assets/twitter_button.png'), omniauth_authorize_path(resource_name, provider) %>
			  <%- end -%>
			</div>

		  <% end -%>
		<% end -%>
	</div>
	<div id='sessions-new-or'>
		- OR -
	</div>
	<div id='sessions-new-devise'>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div>
				<%= f.email_field :email, :id => :sessions_new_email %>
			</div>
			
			<div>
				<%= f.password_field :password, :id => :sessions_new_password %>
			</div>
			
			<% if devise_mapping.rememberable? -%>
			<div>
				<%= f.label :remember_me %>
				<%= f.check_box :remember_me %>
			</div>
			<% end -%>

			<div>
				<%= f.submit "Sign in" %>
			</div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>

</div>

</div>